<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.web.WebView?>

<VBox alignment="TOP_CENTER" prefHeight="659.0" prefWidth="960.0" spacing="15" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.peliculas.proyecto.controllers.vistaPayment">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Título -->
    <Label style="-fx-text-fill: purple;" text="CineVerse">
        <font>
            <Font name="System Bold" size="28" />
        </font>
    </Label>

    <Label style="-fx-text-fill: purple;" text="Datos de Pago">
        <font>
            <Font name="System Bold" size="20" />
        </font>
    </Label>

    <!-- Contenedor principal: Izquierda (película) y Derecha (pago) -->
    <HBox alignment="TOP_CENTER" prefHeight="490.0" prefWidth="920.0" spacing="20">

        <!-- COLUMNA IZQUIERDA: Información de la película -->
        <VBox alignment="TOP_CENTER" prefHeight="335.0" prefWidth="351.0" spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8;">
            <Label fx:id="lblTitulo" style="-fx-font-size: 18px; -fx-font-weight: bold;" wrapText="true" />
            <ImageView fx:id="imgBackdrop" fitHeight="200.0" fitWidth="320.0" pickOnBounds="true" preserveRatio="true" />
            <Label fx:id="lblPrecio" style="-fx-font-size: 16px; -fx-text-fill: green;" />

            <!-- Botones -->
            <HBox alignment="CENTER" spacing="15">
                <padding>
                    <Insets top="10" />
                </padding>
                <Button fx:id="btnVolver" styleClass="btnVolver" stylesheets="@../styles.css" text="Volver" />
            </HBox>
        </VBox>

        <!-- COLUMNA DERECHA: Pasarela de pago (Stripe) -->
        <VBox alignment="TOP_CENTER" style="-fx-background-color: white; -fx-padding: 10; -fx-background-radius: 8;">
            <WebView fx:id="webView" prefHeight="400.0" prefWidth="450.0" style="-fx-border-color: #cccccc; -fx-border-width: 1;" />
        </VBox>

    </HBox>

</VBox>
