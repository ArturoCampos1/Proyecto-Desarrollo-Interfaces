<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="800.0" prefWidth="1000.0"
            stylesheets="@../styles.css"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.peliculas.proyecto.controllers.vistaPanelUsuario"
            style="-fx-background-color: #F1F1F1;">

    <!-- ICONO USUARIO IZQUIERDA -->
    <ImageView fx:id="iconUser"
               fitWidth="45" fitHeight="45"
               layoutX="20" layoutY="20"
               pickOnBounds="true"
               preserveRatio="true"
               style="-fx-cursor: hand;" />

    <!-- BOTÓN MODO OSCURO DERECHA -->
    <Button fx:id="toggleDark"
            layoutX="927.0" layoutY="20.0"
            prefWidth="40" prefHeight="40"
            style="-fx-background-radius: 20; -fx-background-color: #D9D9D9;" />

    <!-- TITULO CINEVERSE -->
    <Label text="CineVerse"
           layoutX="402.0" layoutY="100.0"
           style="-fx-font-size: 40px; -fx-font-weight: bold;
                  -fx-text-fill: linear-gradient(from 0% 0% to 100% 100%, #C026D3, #4F46E5);" />

    <!-- BOTÓN PANEL DE USUARIO (Decorativo) -->
    <Button text="★  Panel de Usuario"
            layoutX="410.0" layoutY="160.0"
            style="-fx-background-color: #B2C7E1; -fx-text-fill: #1F1F1F;
                   -fx-font-size: 16px; -fx-background-radius: 20;"
            prefWidth="180" prefHeight="40" />

    <Label text="Gestiona tu cuenta y películas"
           layoutX="390.0" layoutY="210.0"
           style="-fx-font-size: 14px; -fx-text-fill: #555;" />

    <!-- CONTENEDOR DE LAS 3 TARJETAS -->
    <HBox spacing="40"
          layoutX="150.0" layoutY="280.0"
          prefWidth="700" prefHeight="230">

        <!-- TARJETA 1 -->
        <StackPane prefWidth="200" prefHeight="200"
                   fx:id="cardListas"
                   style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 20;
                          -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 3);">

            <VBox alignment="TOP_CENTER" spacing="10">
                <ImageView fitWidth="50" fitHeight="50" />
                <Label text="Tus listas"
                       style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                <Label text="Películas favoritas y pendientes"
                       style="-fx-font-size: 13px; -fx-text-fill: gray;" />
            </VBox>
        </StackPane>

        <!-- TARJETA 2 -->
        <StackPane prefWidth="200" prefHeight="200"
                   fx:id="cardPrestamos"
                   style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 20;
                          -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 3);">

            <VBox alignment="TOP_CENTER" spacing="10">
                <ImageView fitWidth="50" fitHeight="50" />
                <Label text="Préstamos"
                       style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                <Label text="Ver alquileres"
                       style="-fx-font-size: 13px; -fx-text-fill: gray;" />
            </VBox>
        </StackPane>

        <!-- TARJETA 3 -->
        <StackPane prefWidth="200" prefHeight="200"
                   fx:id="cardAlquilar"
                   style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 20;
                          -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 3);">

            <VBox alignment="TOP_CENTER" spacing="10">
                <ImageView fitWidth="50" fitHeight="50" />
                <Label text="Alquilar"
                       style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                <Label text="Nueva película"
                       style="-fx-font-size: 13px; -fx-text-fill: gray;" />
            </VBox>
        </StackPane>
    </HBox>

    <!-- BOTÓN VOLVER -->
    <Button fx:id="btnVolver"
            text="← Volver"
            layoutX="50.0" layoutY="720.0"
            prefWidth="120" prefHeight="35"
            style="-fx-background-color: #E5E5E5; -fx-background-radius: 10; -fx-font-size: 14px;" />

</AnchorPane>
